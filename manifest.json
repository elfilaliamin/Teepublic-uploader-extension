{
  "name": "TeePublic Upload Automation (Local Flask)",
  "version": "1.0.0",
  "manifest_version": 3,

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_title": "TP Auto Uploader",
    "default_popup": "popup.html"
  },

  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "https://www.teepublic.com/*",
    "https://teepublic.com/*"
  ],

  "background": { "service_worker": "background.js" },

  "content_scripts": [
    {
      "matches": ["https://www.teepublic.com/*", "https://teepublic.com/*"],
      "js": ["content.js"]
    }
  ]
}
